{
    "extends": "@tsconfig/svelte/tsconfig.json",
  
    "include": ["src/**/*", "src/node_modules"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
    "compilerOptions": {
      "types": [ "node", "svelte", "@types/gtag.js" ],
      "typeRoots": [
        "src/customTypes",
        "node_modules/@types"
      ],
      "resolveJsonModule": true,
      "strict": true
    }
  }