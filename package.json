{
  "name": "@silintl/cover-ui",
  "scripts": {
    "prebuild:dev": "npm run clean:build",
    "build:dev": "rollup -c -w",
    "prebuild:prod": "echo GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID} >> .env; echo API_HOST=${API_HOST} >> .env; npm run clean:build",
    "build:prod": "rollup -c",
    "check": "npx svelte-check",
    "clean": "run-p -l clean:build clean:deps",
    "clean:build": "rimraf dist/bundle* dist/service-worker* dist/workbox*",
    "clean:deps": "npm prune",
    "format": "prettier --write ./src/**/*.{js,ts,svelte}",
    "lint": "eslint ./src/**/*.{js,ts,svelte}",
    "lint:fix": "eslint --fix ./'src/**/*.{js,ts,svelte}'",
    "prelint": "npm run format",
    "local:dev": "run-p -l build:dev serve:http",
    "local:prod": "run-p -l build:prod serve:http",
    "serve:http": "sirv dist --dev --host 0.0.0.0 --port 8081 --single",
    "serve:https": "sirv dist --dev --host 0.0.0.0 --port 8443 --single --http2 --key key.pem --cert cert.pem"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@roxi/routify": "^2.18.3",
    "@silintl/ui-components": "^3.2.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/croppie": "^2.6.1",
    "@types/gtag.js": "^0.0.7",
    "@types/node": "^16.10.2",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "croppie": "^2.6.5",
    "date-fns": "^2.25.0",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "material-components-web": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "qs": "^6.10.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-dotenv": "^0.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "sass": "1.32.x",
    "sirv-cli": "^1.0.14",
    "svelte": "^3.43.1",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.8",
    "typescript": "^4.4.3"
  }
}
